<?xml version="1.0" encoding="utf-8" standalone="no"?>
<web-app
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.5"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- Tracking servlets -->
	<servlet>
		<servlet-name>pixel</servlet-name>
		<servlet-class>com.dataiku.wt1.controllers.PixelServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>pixel</servlet-name>
		<url-pattern>/p.gif</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>events</servlet-name>
		<servlet-class>com.dataiku.wt1.controllers.APIServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>events</servlet-name>
		<url-pattern>/events</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>globalId</servlet-name>
		<servlet-class>com.dataiku.wt1.controllers.GlobalIdServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>globalId</servlet-name>
		<url-pattern>/globalId</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>optout</servlet-name>
		<servlet-class>com.dataiku.wt1.controllers.OptoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>optout</servlet-name>
		<url-pattern>/cookie/*</url-pattern>
	</servlet-mapping>
	
	<!-- Debugging console -->

	<servlet>
		<servlet-name>debug</servlet-name>
		<servlet-class>com.dataiku.wt1.controllers.DebuggingServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>debug</servlet-name>
		<url-pattern>/debug</url-pattern>
	</servlet-mapping>

	<!-- Test --> 

	<servlet>
		<servlet-name>nothing</servlet-name>
		<servlet-class>com.dataiku.wt1.controllers.NoopServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>nothing</servlet-name>
		<url-pattern>/nothing</url-pattern>
	</servlet-mapping>
	
	<!-- GAE specific -->
	<servlet>
		<servlet-name>init</servlet-name>
		<servlet-class>com.dataiku.wt1.gae.InitializationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>init</servlet-name>
		<url-pattern>/_ah/start</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value />
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
